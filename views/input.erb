<h2>Word Definer</h2>


<h3>Words</h3>

<ul>
  <% @dictionary.each do |item| %>
  <li> <a href="/output/<%= item.id %>">
  <%= item.word %></a> </li>
  <% end %>

</ul>

<form class="form-group" action="/output" method="post">

  <label for="word">Enter a word to define:</label>
  <input class="form-control" type="text" name="word" required>

  <label for="word">Enter a definition:</label>
  <input class="form-control" type="text" name="definition" required>

<button type="submit" class="btn btn-info" name="button">Add word</button>

</form>
